<h1>All our Flats</h1>

<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="card row d-lg-inline-flex " style="width: 18rem;">
        <%= image_tag(flat.picture_url, alt: flat.name) if flat.picture_url.present? %>
        <h2><%= flat.name %></h2>
        <p><%= flat.address %></p>
        <p><%= flat.price_per_night %> per night</p>
        <p>Guests: <%= flat.number_of_guests %></p>
        <%= link_to "More info", flat_path(flat) %>
        <%= link_to "Edit", edit_flat_path(flat) %>
        <%= link_to "Delete",
        flat_path(flat),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
      </div>
    <% end %>
  </div>
</div>
